<form class="row align-content-center" id="table_selector">
    <div class="col">
        <label class="text-center" for="table_selector">Table: </label>
        <select class="form-select" id="table_selector">
            <option value="">Select table</option>
            {% for table in tables %}
            <option value="{{ table }}">{{ table }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="col-4 mt-4">
        <p class="invisible pt-2" id="positional_data">
            Showing <span id="position"></span> - <span id="inc"></span> of <span id="max"></span> rows
        </p>
    </div>
    <div class="col me-3">
        <button type="button" class="btn btn-warning float-end" id="disconnect">Disconnect</button>
    </div>
</form>
<div class="row" data-bs-toggle="collapse" data-bs-target="#db_error" id="error_container">
    <div class="col">
        <div class="collapse alert alert-danger" id="db_error" role="alert">
            <strong>Error!</strong>
            <span id="db_error_message"></span>
            <i class="float-end">Will self close</i>
        </div>
    </div>
</div>
